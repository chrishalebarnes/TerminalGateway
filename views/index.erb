<link rel="stylesheet" type="text/css" href="css/index.css">
<script src="javascript/index.js" type="text/javascript"></script>
<div class="outer-center">
  <div id="terminal-panel" class="panel panel-primary inner-center">
    <div class="panel-heading">Terminal â€“ <span id="terminal-header">disconnected</span></div>
    <div id="terminal-panel-body" class="panel-body">
      <div id="terminal"></div>
    </div>
  </div>
</div>

<div class="modal fade" id="connect-modal" tabindex="-1" role="dialog" aria-labelledby="connect" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="connect" class="form-horizontal" role="form">
        <%= Rack::Csrf.tag(env) %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Connect</h4>
        </div>
        <div class="modal-body">
          <div class="container-fluid">            
              <div class="form-group">
                <label class="control-label col-sm-2" for="host">Host</label>
                <div class="col-sm-10">
                  <input id="host" type="text" name="host" class="form-control" placeholder="Host" value="localhost"></input>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2" for="port" >Port</label>
                <div class="col-sm-10">
                  <input id="port" type="text" name="port" class="form-control" placeholder="Port" value="2222"></input>
                </div>
              </div>              
              <div class="form-group ">            
                <label class="control-label col-sm-2" for="user-name">User Name</label>
                <div class="col-sm-10">
                  <input id="user-name" type="text" name="user-name" class="form-control" placeholder="Username" value="vagrant"></input>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2" for="password">Password</label>
                <div class="col-sm-10">
                  <input id="password" type="text" name="password" class="form-control" placeholder="Password" value="vagrant"></input>
                </div>
              </div>          
              <div class="form-group">
                <label class="control-label col-sm-2" for="private-key">Private Key</label>
                <div class="col-sm-10">
                  <textarea id="private-key" name="private-key" class="form-control" style="padding-left:0;margin-left:0;" rows="7" placeholder="Private Key"></textarea>
                </div>
              </div>   
          </div>
        </div>
        <div class="modal-footer">
           <button type="submit" class="btn btn-default btn-success">Connect</button>
           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>